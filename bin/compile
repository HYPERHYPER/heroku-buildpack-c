#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

VENDOR_DIR="$BUILD_DIR/vendor"
VENDOR_URL="http://s3.amazonaws.com/phhhoto-buildpacks/ooorigin.tar.gz"

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd $BUILD_DIR

# download vendor libs
echo "-----> Downloading vendor libraries"
curl -L --silent $VENDOR_URL | tar xz

# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | indent
fi

# make
echo "-----> Compiling with Make"
export CPATH="$VENDOR_DIR/include"
export LIBRARY_PATH="$VENDOR_DIR/lib"
make 2>&1 | indent
